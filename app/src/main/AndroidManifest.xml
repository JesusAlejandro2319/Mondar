<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mondar.app.jesusobregon.com.mondar">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar"
        >
        <activity
            android:name=".MainActivity"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Randoms"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.RANDOMS" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PrimerRandom"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.PRIMERRANDOM" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ResultadoFinal"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.RESULTADOFINAL" />

                <category android:name="android.intent.canvas.resultado" />
            </intent-filter>
        </activity>
    </application>

</manifest>